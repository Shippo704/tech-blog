<main>
    <div class="row">
        <div class="">
            <h1 class="d-flex justify-content-center">Dashboard</h1>
            <div class="d-inline-flex p-2">
                <a href="/newpost" class="btn nav text-light">Create New Post</a>
            </div>
        </div>
    </div>

    <h1 class="d-flex justify-content-center">My Posts:</h1>
    {{#each posts}}
        <div class="col-md-3 m-4">
            <div class="card">
                <div class="card-header d-flex justify-content-center">
                    <h2 class="card-title"></h2>
                    <a href="/post/{{id}}" class="title btn text-dark">{{title}}</a>
                </div>

                <div class="card-body text-dark">
                    <p>{{content}}</p>
                    <p>Created By: {{user.username}} at Date: {{format_date createdAt}}</p>
                </div>
            </div>

        </div>
    {{/each}}
</main>